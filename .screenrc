startup_message off
defscrollback 3000
msgwait 1
nethack on
shelltitle '$ |bash'

escape ^Zz

bindkey -d -k kb stuff "\010"

# Last line is status: green hostname, window list in cyan, and time and date right aligned:
hardstatus alwayslastline "%{=b}%{G}%H: %{C}%w %=%{G}%D, %m/%d %C%a"

##   Initial Windows   ##
# You end up at the last window to be opened
# Windows open to bash by default
#screen 0 emacs -nw
#screen 5
#screen 4
#screen 3
#screen 2
#screen 1
screen 0
